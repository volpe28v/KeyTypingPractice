rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーは自分のドキュメントのみアクセス可能
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // レッスンは全ユーザーが読み取り可能、作成者のみ編集可能
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
    
    // ゲーム記録は作成者のみアクセス可能
    match /gameRecords/{recordId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // ウィークリーXP: ログインユーザーは読み取り可、作成は自分のみ
    match /weeklyXP/{xpId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // お気に入りレッスン: 自分のお気に入りのみアクセス可能
    match /userFavorites/{favoriteId} {
      allow read: if request.auth != null
        && request.auth.uid == resource.data.userId;
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // レッスン記録: ランキング用に全ユーザー読み取り可、作成は自分のレコードのみ
    match /lessonRecords/{recordId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }
  }
}